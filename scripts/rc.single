#!/bin/bash
#
# Single-user start-up script.
#

. Â£{DAEMON_DIR}/functions

if [[ $PREVLEVEL != N ]]; then
    daemond stop-all
    kill_all
    
    # Start/trigger udev, load MODULES, and settle udev
    udevd_modprobe single
    
    # Removing leftover files
    remove_leftover
fi

bootlogd_stop

if [[ $RUNLEVEL = 1 ]]; then
    kill -HUP 1
    exec init -t1 S
fi

